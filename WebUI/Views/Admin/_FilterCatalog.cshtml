@model WebUI.Models.AdminFilterVeiwModel

<h4>Фильтр:</h4>
@using (Html.BeginForm("Index", "Admin", FormMethod.Get, new {@class = "form-inline" }))
{
    <div class="form-group">
        @Html.EditorFor(m => m.Word, new {htmlAttributes = new {@class = "form-control", placeholder = "Поиск по слову"}})
    </div>

    <div class="form-group">
        @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Цена" } })
    </div>
    
    <div class="form-group">
        @Html.EditorFor(m => m.Fat, new {htmlAttributes = new {@class = "form-control", placeholder = "Жирность"}})
    </div>
    
    <div class="form-group">
        @Html.EditorFor(m => m.Hits, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <input type="submit" class="btn btn-primary" value="Поиск"/>
}
